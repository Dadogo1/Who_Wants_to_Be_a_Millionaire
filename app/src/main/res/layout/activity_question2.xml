<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A237E"
    tools:context=".Question2">

    <!--The current score-->
    <TextView
        android:id="@+id/Q2_SCORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:textColor="#C0CA33"
        android:textSize="75sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--The divider between the score and question-->
    <View
        android:id="@+id/Q2_DIVIDER"
        android:layout_width="380sp"
        android:layout_height="3sp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q2_SCORE"
        tools:ignore="SmallSp" />

    <!--The question itself-->
    <TextView
        android:id="@+id/Q2"
        android:layout_width="380sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/Q2"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q2_SCORE" />

    <!--The answers the player will pick-->
    <RadioGroup
        android:id="@+id/Q2_ANSWERS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q2">

        <RadioButton
            android:id="@+id/A2_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/A2_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/A2_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/A2_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RadioGroup>

    <!--The button to confirm the answer-->
    <Button
        android:id="@+id/Q2_answer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/answer_button"
        app:layout_constraintEnd_toStartOf="@+id/Q2_PAGE"
        app:layout_constraintTop_toBottomOf="@+id/Q2_ANSWERS" />

    <!--The button to safely quit the game-->
    <Button
        android:id="@+id/Q2_withdraw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/withdraw_button"
        app:layout_constraintStart_toEndOf="@+id/Q2_PAGE"
        app:layout_constraintTop_toBottomOf="@+id/Q2_ANSWERS" />

    <!--To inform on what question the player is currently on-->
    <TextView
        android:id="@+id/Q2_PAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/Q2_Page"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q2_ANSWERS" />

</androidx.constraintlayout.widget.ConstraintLayout>